<table class="table table-bordered table-condensed table-hover tableindex">
  <tr class="user_heading">
    <td>Email Address</td>
    <td>Sign Ins</td>
    <% if current_user.admin? %>
      <td>Super User</td>
    <% end %>
    <td>Admin</td>
    <td>Leader</td>
    <td>Guest</td>
    <td>Enabled</td>
    <% if current_user.admin? %>
      <td></td>
    <% end %>
  </tr>
  <% current_church = nil %>
  <% @users.each do |user| %>
    <% disabled_row = user.id == current_user.id || (user.admin? && !current_user.admin?) || !(current_user.admin? || current_user.church_admin) %>
    <% if current_church != user.church_id %>
      <% current_church = user.church_id %>
      <tr class="church_heading"><td colspan="<%= current_user.admin ? 9 : 7 %>"><%= user.church.church_name %></td></tr>
    <% end %>
    <tr data-user-id="<%= user.id %>">
      <td><%= user.email %><%= user.id == current_user.id ? " (you)" : "" %></td>
      <td><%= user.sign_in_count %></td>
      <fieldset>
      <% if current_user.admin? %>
        <td><input name="<%= user.id %>" type="radio"<%= user.admin? ? " checked=checked" : "" %><%= disabled_row ? " disabled" : "" %>></td>
      <% end %>
      <td><input name="<%= user.id %>" type="radio"<%= user.church_admin? ? " checked=checked" : "" %><%= disabled_row ? " disabled" : "" %>></td>
      <td><input name="<%= user.id %>" type="radio"<%= user.church_leader? ? " checked=checked" : "" %><%= disabled_row ? " disabled" : "" %>></td>
      <td><input name="<%= user.id %>" type="radio"<%= user.church_leader? || user.church_admin? || user.admin?  ? "" : " checked=checked" %><%= disabled_row ? " disabled" : ""%>></td>
      </fieldset>
      <td><input type="checkbox"<%= user.enabled? ? " checked=\"checked\"" : "" %><%= disabled_row ? " disabled" : "" %>></td>
      <% if current_user.admin? %>
        <td>
        <%= link_to "", user, method: :delete, remote:true, data: { confirm: "Are you sure?" }, tabindex: -1,
          class:"glyphicon glyphicon-minus-sign crud_delete crud_button", title:"Delete this user (this cannot be undone)" unless disabled_row %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>