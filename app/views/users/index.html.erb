<table class="table table-bordered table-condensed table-hover tableindex">
  <tr class="user_heading">
    <td>Email Address</td>
    <td>Sign Ins</td>
    <% if current_user.admin? %>
      <td>Super User</td>
    <% end %>
    <td>Admin</td>
    <td>Leader</td>
    <td>Guest</td>
    <td>Enabled</td>
    <td></td>
  </tr>
  <% current_church = nil %>
  <% @users.each do |user| %>
    <% if current_church != user.church_id %>
      <% current_church = user.church_id %>
      <tr class="church_heading"><td colspan="<%= current_user.admin ? 8 : 7 %>"><%= user.church.church_name %></td></tr>
    <% end %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.sign_in_count %></td>
      <fieldset>
      <% if current_user.admin? %>
        <td><input name="<%= user.id %>" type="radio"<%= user.admin? ? " checked=checked" : "" %>></td>
      <% end %>
      <td><input name="<%= user.id %>" type="radio"<%= user.church_admin? ? " checked=checked" : "" %>></td>
      <td><input name="<%= user.id %>" type="radio"<%= user.church_leader? ? " checked=checked" : "" %>></td>
      <td><input name="<%= user.id %>" type="radio"<%= user.church_leader? || user.church_admin? || user.admin?  ? "" : " checked=checked" %>></td>
      </fieldset>
      <td><input type="checkbox"<%= user.enabled? ? " checked=\"checked\"" : "" %>></td>
      <td>
      <%= link_to "", user, method: :delete, remote:true, data: { confirm: "Are you sure?" }, tabindex: -1,
        class:"glyphicon glyphicon-minus-sign crud_delete crud_button",
        title:"Delete this user (this cannot be undone)" %></td>
    </tr>
  <% end %>
</table>