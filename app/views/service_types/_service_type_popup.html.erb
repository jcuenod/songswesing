<div><%= form_for @service_type, html: {class: "form-horizontal", id: "frm_create"}, remote: true do |f| %>
	<div class="form-group"><%= f.label :service_type, raw("Service&nbsp;Name"), class: "col-sm-4 control-label" %>
		<div class="col-sm-8"><%= f.text_field :service_type, class: "form-control", required:"required" %></div>
	</div>
	<div class="form-group"><%= f.label :weight, class: "col-sm-4 control-label" %>
		<div class="col-sm-8"><%= f.number_field :weight, class: "form-control" %></div>
	</div>
    <%= f.submit class:"btn btn-primary btn-lg btn-block" %>
<% end %></div>